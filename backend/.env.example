# Environment
NODE_ENV=development

# Server
PORT=3000

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/todoapp?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_CONNECTION_STRING="redis://localhost:6379"

# Azure Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=

# Azure Key Vault (optional for local dev)
AZURE_KEY_VAULT_NAME=

# Chaos Engineering Flags
CHAOS_MEMORY_LEAK_ENABLED=false
CHAOS_N_PLUS_ONE_ENABLED=false
CHAOS_CPU_SPIKE_ENABLED=false
CHAOS_DB_TIMEOUT_ENABLED=false
CHAOS_UNHANDLED_PROMISE_ENABLED=false
CHAOS_POOL_EXHAUSTION_ENABLED=false
CHAOS_CACHE_INVALIDATION_ENABLED=false

# Logging
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:5173
